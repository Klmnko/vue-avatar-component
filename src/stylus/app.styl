@import "__normalize.css"
@import "__modal.styl"

body
  box-sizing border-box
  font-family: Roboto, sans-serif
  background: #eeeeee
  color: #040404

*
  box-sizing inherit

.d-none
  display: none

.mt-20
  margin-top: 20px
.mt-40
  margin-top: 40px

img
  max-width: 100%;

.container
  padding-left: 20px
  padding-right: 20px
  margin-left: auto
  margin-right: auto
  max-width: 1200px
  width: 100%

.header
  box-shadow: 0px 3px 5px rgba(100, 100, 100, 0.49);
  background: #fff

  &__cont
    display: flex
    align-items: center
    height: 70px

.user
  position: relative
  overflow: hidden
  margin-left: auto
  display: flex
  align-items: center
  justify-content: center
  width: 50px
  height: 50px
  border-radius: 50%
  background: #c4c4c4
  &__avatar-btn
    opacity: 0
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border: none
    outline: none
    background: rgba(#000, 0.4) url("src/img/edit-regular.svg") center no-repeat
    background-size: 35%
    cursor: pointer
    transition: all 0.3s
    &:hover
      opacity: 1
  
  img:not(.def)
    width: 100%;
    height: 100%;
    object-fit: cover;
    overflow: hidden;
  .def
    max-height: 50%



.section-profile
  padding-top: 80px



.main-title
  text-align: center
  text-transform: uppercase
  font-size: 28px
  font-weight: 500

.main-subtitle
  text-align: center
  font-size: 20px
  font-weight: 500
  
.avatar-preview
  position: relative
  overflow: hidden
  display: flex
  align-items: center
  justify-content: center
  margin-left: auto
  margin-right: auto
  max-width: 400px
  max-height: 400px
  height: 400px
  border-radius: 50%
  background: #c4c4c4
  img:not(.def)
    width: 100%;
    height: 100%;
    object-fit: cover;
    overflow: hidden;
  .def
    min-height: 60%
    min-width: 60%
    max-width: 60%
  &__btn
    opacity: 0
    cursor: pointer
    position: absolute
    bottom: 0
    left: 0
    display: flex
    align-items: center
    justify-content: center
    width: 100%
    height: 60px
    background: rgba(#000, .5)
    color: #ffffff
    font-size: 16px
    transition all 0.4s
  &:hover &__btn
    opacity: 1

@media screen and (max-width: 460px), print
  .avatar-preview
    width: calc(100vw - 40px)
    height: calc(100vw - 40px)



.button
  cursor pointer
  display: inline-flex
  align-items: center
  border: none
  outline: none
  transition all 0.3s
  svg:not(:only-child):first-child
    min-width: 16px
    margin-right: 8px;
  &_blue
    padding: 4px 15px;
    min-height: 40px
    border-radius: 3px
    background: #3273dc
    color: #fff;
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase
    &:hover
      background: darken(#3273dc, 10%)
  &_green
    padding: 4px 15px;
    min-height: 40px
    border-radius: 3px
    background: #23d160
    color: #fff;
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase
    &:hover
      background: darken(#23d160, 10%)